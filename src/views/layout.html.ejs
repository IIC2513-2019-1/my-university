<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>IIC2513 - CHANGE-ME</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
  </head>

  <body>
    <div id="container">
      <header>
        <a href="<%= coursesPath %>"><h1>My University</h1></a>
        <div id="user-bar">
          <% if (currentUser) { %>
            <span class="name">Hi <%= currentUser.name %></span>
            <form action="<%= destroySessionPath %>" method="post">
              <input type="hidden" name="_method" value="delete" />
              <input type="submit" value="Logout" />
            </form>
          <% } else { %>
            <span class="name">Hi!</span>
            <a href="<%= newSessionPath %>">Login</a>
          <% } %>
        </div>
      </header>
      <%- body %>
      <script src="<%= assetPath('app.js') %>"></script>
    </div>
  </body>

</html>
